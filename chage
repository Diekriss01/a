#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2); // Adjust the address if necessary

unsigned long lastCoinTime = 0; // Variable to store the time of the last counted coin
unsigned long coinInterval = 5000; // Interval between counting coins (in milliseconds)
int coinCount = 0; // Counter for the number of coins

void setup() {
  lcd.init();
  lcd.backlight();
  lcd.setCursor(0, 0);
  lcd.print("Coins detected:");
}

void loop() {
  unsigned long currentTime = millis(); // Get the current time

  // Check if it's time to count a coin based on the interval
  if (currentTime - lastCoinTime >= coinInterval) {
    coinCount++; // Increment the coin count
    lastCoinTime = currentTime; // Update the last coin time
  }

  // Update the LCD display with the coin count
  lcd.setCursor(0, 1);
  lcd.print(coinCount);

  // Add any other operations or delays here
}
