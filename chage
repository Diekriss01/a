#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2); // Adjust the address if necessary

#define COIN_SENSOR_PIN A0

int coinCount = 0;

void intro() {
  lcd.setCursor(2, 0);
  lcd.print("COIN SORTING");
  delay(2000);
  lcd.clear();
}

void setup() {
  lcd.init();
  lcd.backlight();
  intro();
  lcd.setCursor(0, 0);
  lcd.print("Coins detected:");
}

void loop() {
  int sensorValue = analogRead(COIN_SENSOR_PIN);

  // Placeholder for coin detection logic
  if (sensorValue > 100) {
    coinCount++;
  }

  lcd.setCursor(0, 1);
  lcd.print(coinCount);

  delay(100);  // Adjust delay as needed
}
