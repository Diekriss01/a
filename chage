#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2); // Adjust the address if necessary

const byte coinDropPin = 2; // Digital pin connected to the coin drop sensor from IC510T TB510
int coinCount = 0; // Counter for the number of coins
bool coinDetected = false; // Flag to indicate if a coin has been detected

void setup() {
  lcd.init(); // Initialize the LCD
  lcd.backlight(); // Turn on the backlight
  lcd.setCursor(0, 0);
  lcd.print("Coins detected:");
  lcd.setCursor(0, 1);
  lcd.print("Ready for coins"); // Display message indicating readiness to detect coins
  pinMode(coinDropPin, INPUT_PULLUP); // Set coin drop pin as input with internal pull-up resistor
  Serial.begin(9600); // Initialize serial communication
}

void loop() {
  // Check if a coin is dropped
  if (!coinDetected && digitalRead(coinDropPin) == LOW) {
    coinDetected = true; // Set coin detected flag

    // Update the coin count
    coinCount++;

    // Update the LCD display with the coin count
    lcd.setCursor(0, 1);
    lcd.print("          "); // Clear the previous count
    lcd.setCursor(0, 1);
    lcd.print(coinCount);
  } else if (coinDetected && digitalRead(coinDropPin) == HIGH) {
    coinDetected = false; // Reset coin detected flag when coin is no longer detected
  }

  // Debug output
  Serial.print("Coin Drop Pin: ");
  Serial.println(digitalRead(coinDropPin));

  // Add any other operations or delays here
  delay(1000); // Delay to avoid flooding the Serial Monitor
}
