#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2); // Adjust the address if necessary
#define COIN_COUNTER_PIN 2 // Assuming the coin counter output is connected to digital pin 2

void setup() {
  lcd.init();
  lcd.backlight();
  lcd.setCursor(0, 0);
  lcd.print("Coins detected:");
  pinMode(COIN_COUNTER_PIN, INPUT); // Set coin counter pin as input
}

void loop() {
  int coinCount = digitalRead(COIN_COUNTER_PIN); // Read count from coin counter pin

  lcd.setCursor(0, 1);
  lcd.print(coinCount);

  delay(100);  // Adjust delay as needed
}
